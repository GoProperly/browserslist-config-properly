{
  "name": "@goproperly/browserslist-config-properly",
  "description": "Browserslist configuration for Properly websites",
  "license": "MIT",
  "author": "Gavin Sharp <gavin@goproperly.com>",
  "homepage": "https://github.com/GoProperly/browserslist-config-properly#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoProperly/browserslist-config-properly.git"
  },
  "bugs": {
    "url": "https://github.com/GoProperly/browserslist-config-properly/issues"
  },
  "version": "1.0.7",
  "main": "index.js",
  "files": [
    "development.js",
    "production.js"
  ],
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . || true",
    "release": "semantic-release",
    "test": "echo \"No tests yet!\" && exit 0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@goproperly/eslint-config-properly-base": "^1.0.13",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^7.0.18",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "husky": "^4.0.6",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "semantic-release": "^15.14.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
