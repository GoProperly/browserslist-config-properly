{
  "name": "@goproperly/browserslist-config-properly",
  "description": "Browserslist configuration for Properly websites",
  "license": "MIT",
  "author": "Gavin Sharp <gavin@goproperly.com>",
  "homepage": "https://github.com/GoProperly/browserslist-config-properly#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoProperly/browserslist-config-properly.git"
  },
  "bugs": {
    "url": "https://github.com/GoProperly/browserslist-config-properly/issues"
  },
  "version": "1.0.8",
  "main": "index.js",
  "files": [
    "development.js",
    "production.js"
  ],
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . || true",
    "release": "semantic-release",
    "test": "echo \"No tests yet!\" && exit 0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@goproperly/eslint-config-properly-base": "^1.2.14",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "semantic-release": "^17.2.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
